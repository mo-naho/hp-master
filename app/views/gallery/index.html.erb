    <div class="clearfix"></div>
      <div class="poster_img">
        <h3>MAGIC COMBAT VR</h3>
        <%= image_tag "2018poster_mc1.png" %>
      </div>
      <div class="poster_img">
        <h3>MAGIC COMBAT VR</h3>
        <%= image_tag "2018poster_mc2.png" %>
      </div>
    <div class="clearfix"></div>
    </div>

