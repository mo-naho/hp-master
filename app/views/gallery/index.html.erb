    <div class="creats">
      <h1 class="black_letter">制作物</h1>
      <div class="creats_item">
        <a href="/yozawiza" target="_blank">
          <h2>夜桜ウィザード</h2>
          <%= image_tag "2018gallery_yozawiza.png" %>
        </a>
      </div>
      <div class="creats_item">
        <a href="/games" target="_blank">
          <h2>Magic Combat VR</h2>
          <%= image_tag "2018gallery_magicCombat.png" %>
        </a>
      </div>
      <div class="clearfix"></div>
      <div class="creats_item">
        <a href="/hackathon_b" target="_blank">
          <h2>Make A Clean World</h2>
          <%= image_tag "2018festival_macw.png" %>
        </a>
      </div>
      <div class="creats_item">
        <a href="/hackathon_a" target="_blank">
          <h2>CO2 BUSTER!</h2>
          <%= image_tag "2018festival_co2.png" %>
        </a>
      </div>
      <div class="clearfix"></div>
