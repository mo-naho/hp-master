<script>
//facebookのボタン
(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v2.12';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));

 //マウスオーバーでアイコン変わる
 $(document).ready(function(){ 
  $("img#about").mouseover(function(){
    $(this).attr("src","<%= asset_path 'about_red.png' %>").attr("alt","about_on")
  }).mouseout(function(){
    $(this).attr("src","<%= asset_path 'about.png' %>").attr("alt","about")
  });
  $("img#system").mouseover(function(){
    $(this).attr("src","<%= asset_path 'system_red.png' %>").attr("alt","system_on")
  }).mouseout(function(){
    $(this).attr("src","<%= asset_path 'system.png' %>").attr("alt","system")
  });
  $("img#spec").mouseover(function(){
    $(this).attr("src","<%= asset_path 'spec_red.png' %>").attr("alt","spec_on")
  }).mouseout(function(){
    $(this).attr("src","<%= asset_path 'spec.png' %>").attr("alt","spec")
  });
  $("img#movie").mouseover(function(){
    $(this).attr("src","<%= asset_path 'movie_red.png' %>").attr("alt","movie_on")
  }).mouseout(function(){
    $(this).attr("src","<%= asset_path 'movie.png' %>").attr("alt","movie")
  });
});
</script>