    <!-- キャラクター -->
    <div class="charactor">
      <h1 class="black_letter">マスコットキャラクター</h1>
      <div class="gallery_chara">
        <%= image_tag "2018pronti-kun1.png" %>
        <h3>プロンティくん</h3>
        <p>趣味はお茶<br>
          茶道部所属<br>
