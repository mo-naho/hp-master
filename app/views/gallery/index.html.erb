      <div class="poster_img">
        <h3>7月VRゲーム体験会</h3>
        <%= image_tag "2018poster4.png" %>
      </div>
    <div class="clearfix"></div>
      <div class="poster_img">
        <h3>SEIKAサブカルフェスタ2018</h3>
        <%= image_tag "2018poster5.png" %>
