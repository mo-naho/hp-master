        <a href="http://www.prontiatvr.com/"><%= image_tag "2018pjlogo.png", class:"bottom_projrctLogo" %></a>
        <%= image_tag "MC_logo.png", class:"bottom_gameLogo" %>
    </div>
    <p>© 2019 ProntiatVR</p>
</div>
</div>
</div>

<script>
$(function(){
    $(document).ready(function () {
        

        window.sr = ScrollReveal();
        sr.reveal('.MCtitle', {rotate:{x: 0, y: 180, z: 0},duration: 2000, scale: 0.5});
        sr.reveal('.MCtitle', {viewFactor:0.5});
        sr.reveal('.MCsteam', {viewFactor:0.5});
        sr.reveal('.MCabout_text', {viewFactor:0.7});
        sr.reveal('.MCspec_text', {viewFactor:0.7});
        sr.reveal('.MCyoutube', {viewFactor:0.7});
    });


  $('a[href^="#"]').click(function(){
    var speed = 500;
    var href= $(this).attr("href");
    var target = $(href == "#" || href == "" ? 'html' : href);
    var position = target.offset().top;
    $("html, body").animate({scrollTop:position}, speed, "swing");
    return false;
  });
});
</script>
